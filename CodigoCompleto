label.place(x=120, y=5)

def comunicacion():
    while True:
        dato = ser.readline().decode('utf-8')

        try:
            dato = float(dato)
        except:
            pass
        if (dato == 2):
            root.destroy()

        if (dato == 1):
            root.destroy()



